<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/top_include"
        layout="@layout/top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></include>

    <RelativeLayout
        android:layout_marginTop="54px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/flag_tv1"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92px"/>

        <TextView
            android:id="@+id/flag_tv2"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="184px"/>

        <TextView
            android:id="@+id/yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#2a2a2a"
            android:text="原密码:"
            android:layout_alignBottom="@id/flag_tv1"
            android:layout_alignLeft="@id/flag_tv1"
            android:layout_marginBottom="10px"/>

        <TextView
            android:id="@+id/xin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#2a2a2a"
            android:text="新密码:"
            android:layout_alignBottom="@id/flag_tv2"
            android:layout_alignLeft="@id/flag_tv2"
            android:layout_marginBottom="10px"/>


        <EditText
            android:background="@null"
            android:id="@+id/input_pass"
            android:layout_toRightOf="@id/yuan"
            android:paddingLeft="20px"
            android:layout_alignBottom="@id/flag_tv1"
            android:textSize="24px"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px"
            />



        <EditText
            android:background="@null"
            android:id="@+id/input_xin_pass"
            android:layout_toRightOf="@id/xin"
            android:paddingLeft="20px"
            android:inputType="textPassword"
            android:lines="1"
            android:layout_alignBottom="@id/flag_tv2"
            android:textSize="24px"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/flag_tv3"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92px"/>

        <TextView
            android:id="@+id/zai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px"
            android:textColor="#2a2a2a"
            android:text="再次输入新密码:"
            android:layout_alignBottom="@id/flag_tv3"
            android:layout_alignLeft="@id/flag_tv3"
            android:layout_marginBottom="10px"/>

        <EditText
            android:background="@null"
            android:id="@+id/input_xin_pass2"
            android:layout_toRightOf="@id/zai"
            android:paddingLeft="20px"
            android:inputType="textPassword"
            android:lines="1"
            android:layout_alignBottom="@id/flag_tv3"
            android:textSize="24px"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px" />


    </RelativeLayout>
    <Button
        android:id="@+id/btn_finish"
        android:layout_marginTop="162px"
        android:layout_width="680px"
        android:layout_height="70px"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        android:textSize="28px"
        android:textColor="#ffffff"
        android:background="@drawable/login_button"/>

</LinearLayout>