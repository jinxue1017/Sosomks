<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apply_refund"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context="com.ssmk.module.shoppingcar.order.ApplyRefundActivity">

    <include
        android:id="@+id/top_include"
        layout="@layout/top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></include>

    <RelativeLayout
        android:id="@+id/relayout2"
        android:layout_width="680px"
        android:layout_height="206px"
        android:layout_below="@+id/top_include"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:background="@drawable/dibu"
        >

        <ImageView
            android:id="@+id/apply_refund_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="28px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="27px"
            android:background="@drawable/a17"
            />

        <TextView
            android:id="@+id/apply_refund_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/apply_refund_iv"
            android:lineSpacingExtra="10px"
            android:text="每个人都有潜在的能量，只是很容易被习惯所掩盖， 被时间所迷离,被惰性所消磨."
            android:textColor="#2a2a2a"
            android:textSize="22px"
            />

        <TextView
            android:id="@+id/apply_refund_shopinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apply_refund_shopname"
            android:layout_marginLeft="25px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/apply_refund_iv"
            android:text="化妆品净含量：200g"
            android:textColor="#666666"
            android:textSize="20px"
            />

        <TextView
            android:id="@+id/apply_refund_shopprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apply_refund_shopinfo"
            android:layout_marginLeft="25px"
            android:layout_marginTop="12px"
            android:layout_toRightOf="@+id/apply_refund_iv"
            android:text="￥455.9"
            android:textColor="#bb0c0c"
            android:textSize="22px"/>

        <TextView
            android:id="@+id/apply_refund_shopnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="42px"
            android:layout_marginRight="20px"
            android:text="X1"
            android:textColor="#666666"
            android:textSize="18px"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayout_only_refund"
        android:layout_width="680px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relayout2"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:background="@drawable/dibu"
        >

        <TextView
            android:id="@+id/only_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="24px"
            android:text="@string/only_refund"
            android:textColor="#2a2a2a"
            android:textSize="26px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/only_refund"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="14px"
            android:text="@string/no_received"
            android:textColor="#2a2a2a"
            android:textSize="20px"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayout_sales_refund"
        android:layout_width="680px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relayout_only_refund"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:background="@drawable/dibu"
        >

        <TextView
            android:id="@+id/sales_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="24px"
            android:text="@string/sales_refund"
            android:textColor="#2a2a2a"
            android:textSize="26px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sales_refund"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="14px"
            android:text="@string/have_received"
            android:textColor="#2a2a2a"
            android:textSize="20px"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="680px"
            android:layout_height="70px"
            android:layout_centerInParent="true"
            android:background="@drawable/black_btn"
            android:text="@string/commit"
            android:textColor="#ffffff"
            android:textSize="28px"
            />
    </RelativeLayout>
</RelativeLayout>
