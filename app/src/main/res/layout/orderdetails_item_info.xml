<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="680px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:background="@drawable/dibu">

        <TextView
            android:id="@+id/order_info_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单已从克利夫兰发出"
            android:layout_marginTop="42px"
            android:layout_marginLeft="20px"
            android:textSize="26px"
            android:textColor="#e6bd5c"
            />

        <TextView
            android:id="@+id/order_info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年7月11日 9:47"
            android:layout_below="@+id/order_info_address"
            android:layout_marginTop="26px"
            android:layout_marginBottom="42px"
            android:layout_marginLeft="20px"
            android:textSize="24px"
            android:textColor="#e6bd5c"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60px"
            android:layout_marginRight="20px"
            android:src="@drawable/back_xiao"
            />
    </RelativeLayout>
</RelativeLayout>