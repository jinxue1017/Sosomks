<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f7f8">

    <com.ssmk.utlis.SearchView
        android:id="@+id/marter_edit"
        android:layout_width="540px"
        android:layout_height="56px"
        android:layout_alignBaseline="@+id/marter_bnt"
        android:layout_alignBottom="@+id/marter_bnt"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20px"
        android:background="@drawable/search_marter"
        android:gravity="center"
        android:hint="请输入商家/商品名称"
        android:textColor="#666666"
        android:textSize="22px" />

    <Button
        android:id="@+id/marter_bnt"
        android:layout_width="120px"
        android:layout_height="56px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="80px"
        android:background="@drawable/search_hezuo"
        android:text="我要合作"
        android:textColor="#f00"
        android:textSize="22px" />


    <LinearLayout
        android:id="@+id/marter_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marter_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="43px"
        android:layout_marginRight="43px"
        android:background="#f4f7f8"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/marter_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"></android.support.v7.widget.RecyclerView>

        <RadioButton
            android:id="@+id/marter_tea4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="80px"
            android:drawableTop="@drawable/btoom"
            android:gravity="center"
            android:text="更多"
            android:textColor="@drawable/text_selector"
            android:textSize="22px" />

    </LinearLayout>


