    <RelativeLayout
        android:id="@+id/marter_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/marter_radio"
        android:layout_marginTop="28px"
        android:background="#fff">

        <CheckBox
            android:id="@+id/marter_chekd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@id/marter_chekd"
            android:text="及时配送"
            android:textColor="#2a2a2a"
            android:textSize="22px" />

        <TextView
            android:id="@+id/marter_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marter_chekd"
            android:layout_marginLeft="100px"
            android:layout_marginTop="18px"
            android:text="北京市朝阳区香江北岸A座北岸A座"
            android:textColor="#2a2a2a"
            android:textSize="24px" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/marter_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/marter_relayout"
        android:layout_centerHorizontal="true"
        android:background="#fff"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
