<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_refund"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context="com.ssmk.module.shoppingcar.order.RefundActivity">
    <include
        android:id="@+id/top_include"
        layout="@layout/top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></include>
    <RelativeLayout
        android:id="@+id/relayout2"
        android:layout_below="@+id/top_include"
        android:layout_width="680px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="22px"
        android:background="@drawable/dibu"
        >

        <TextView
            android:id="@+id/refund_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refund_success"
            android:textSize="28px"
            android:textColor="#bb0c0c"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            />

        <TextView
            android:id="@+id/refund_money"
            android:layout_below="@+id/refund_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款金额：￥160"
            android:textSize="24px"
            android:textColor="#2a2a2a"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            />
        <TextView
            android:id="@+id/refund_time"
            android:layout_below="@+id/refund_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款时间：2017/07/11"
            android:textSize="24px"
            android:textColor="#2a2a2a"
            android:layout_marginLeft="20px"
            android:layout_marginTop="26px"
            />
        <TextView
            android:id="@+id/refund_reason"
            android:layout_below="@+id/refund_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款原因：我不想要了"
            android:textSize="24px"
            android:textColor="#2a2a2a"
            android:layout_marginLeft="20px"
            android:layout_marginTop="26px"
            />

        <TextView
            android:id="@+id/refund_id"
            android:layout_below="@+id/refund_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款编号：12131452"
            android:textSize="24px"
            android:textColor="#2a2a2a"
            android:layout_marginLeft="20px"
            android:layout_marginTop="26px"
            />

        <TextView
            android:id="@+id/apply_time"
            android:layout_below="@+id/refund_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间：2017/07/11"
            android:textSize="24px"
            android:textColor="#2a2a2a"
            android:layout_marginLeft="20px"
            android:layout_marginTop="26px"
            android:layout_marginBottom="30px"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/goods_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relayout2"
        android:text="@string/goods_info"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="40px"
        android:textSize="26px"
        android:textColor="#2a2a2a"
        />

    <RelativeLayout
        android:id="@+id/relayout3"
        android:layout_below="@+id/goods_info"
        android:layout_width="680px"
        android:layout_height="206px"
        android:layout_marginLeft="20px"
        android:background="@drawable/dibu"
        >

        <ImageView
            android:id="@+id/apply_refund_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="27px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="28px"
            android:background="@drawable/a17"
            />

        <TextView
            android:id="@+id/apply_refund_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/apply_refund_iv"
            android:layout_marginLeft="25px"
            android:lineSpacingExtra="10px"
            android:text="每个人都有潜在的能量，只是很容易被习惯所掩盖， 被时间所迷离,被惰性所消磨."
            android:textSize="22px"
            android:textColor="#2a2a2a"
            />

        <TextView
            android:id="@+id/apply_refund_shopinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/apply_refund_iv"
            android:layout_below="@+id/apply_refund_shopname"
            android:layout_marginTop="20px"
            android:layout_marginLeft="25px"
            android:text="化妆品净含量：200g"
            android:textSize="20px"
            android:textColor="#666666"
            />

        <TextView
            android:id="@+id/apply_refund_shopprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/apply_refund_iv"
            android:layout_below="@+id/apply_refund_shopinfo"
            android:layout_marginTop="12px"
            android:layout_marginLeft="25px"
            android:text="￥455.9"
            android:textSize="22px"
            android:textColor="#bb0c0c"/>

        <TextView
            android:id="@+id/apply_refund_shopnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X1"
            android:textSize="18px"
            android:textColor="#666666"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="42px"
            android:layout_marginRight="20px"
            />
    </RelativeLayout>

</RelativeLayout>
