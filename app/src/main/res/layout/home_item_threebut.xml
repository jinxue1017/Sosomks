<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="54px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginBottom="70px"
        >
        <LinearLayout
            android:id="@+id/threebut_ll_shopping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                style="@style/threebtn_iv_homefra"
                android:id="@+id/threebut_iv_shopping"
                android:src="@drawable/shangcheng"
                />
            <TextView
                android:text="商城"
                android:id="@+id/threebut_tv_shopping"
                style="@style/threebtn_tv_homefra"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/threebut_ll_nfc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                style="@style/threebtn_iv_homefra"
                android:id="@+id/threebut_iv_nfc"
                android:src="@drawable/home_nfc"
                />
            <TextView
                android:text="NFC查询"
                android:id="@+id/threebut_tv_nfc"
                style="@style/threebtn_tv_homefra"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/threebut_ll_twocode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                style="@style/threebtn_iv_homefra"
                android:id="@+id/threebut_iv_twocode"
                android:src="@drawable/erweima"
                />
            <TextView
                android:text="二维码查询"
                android:id="@+id/threebut_tv_twocode"
                style="@style/threebtn_tv_homefra"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/threebut_ll_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                style="@style/threebtn_iv_homefra"
                android:id="@+id/threebut_iv_history"
                android:src="@drawable/lishi"
                />
            <TextView
                android:text="查询历史"
                android:id="@+id/threebut_tv_history"
                style="@style/threebtn_tv_homefra"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
