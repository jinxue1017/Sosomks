<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#f7f7f7"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="238px"
        android:layout_marginTop="135px"
        android:layout_gravity="center_horizontal"
        android:layout_height="289px"
        android:background="@drawable/houlogo1111"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38px">

        <TextView
            android:id="@+id/flag_tv1"
            android:layout_width="680px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92px"
            android:background="#a0a0a0" />

        <TextView
            android:id="@+id/flag_tv2"
            android:layout_width="680px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="184px"
            android:background="#a0a0a0" />

        <ImageView
            android:id="@+id/img_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/flag_tv1"
            android:layout_alignLeft="@id/flag_tv1"
            android:layout_marginBottom="20px"
            android:background="@drawable/phone" />

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:layout_alignBottom="@id/flag_tv1"
            android:layout_toRightOf="@id/img_phonenumber"
            android:background="@null"
            android:inputType="number"
            android:lines="1"
            android:hint="请输入您的手机号"
            android:paddingLeft="16px"
            android:textColor="#cccccc"
            android:textSize="24px" />

        <ImageView
            android:id="@+id/img_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/flag_tv2"
            android:layout_alignLeft="@id/flag_tv2"
            android:layout_marginBottom="20px"
            android:background="@drawable/password" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:layout_alignBottom="@id/flag_tv2"
            android:layout_toRightOf="@id/img_password"
            android:background="@null"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="16px"
            android:textColor="#cccccc"
            android:textSize="24px" />

        <TextView
            android:id="@+id/find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/flag_tv2"
            android:layout_below="@id/flag_tv2"
            android:layout_marginRight="10px"
            android:layout_marginTop="18px"
            android:text="找回密码"
            android:textColor="#2a2a2a"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/img_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/flag_tv2"
            android:layout_alignEnd="@+id/flag_tv2"
            android:layout_marginBottom="14px"
            android:background="@drawable/colse"
             />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/flag_tv2"
            android:layout_alignTop="@+id/img_password"
            android:background="@drawable/open"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="38px"
        android:layout_width="680px"
        android:layout_height="70px"
        android:layout_gravity="center"
        android:background="@drawable/login_button"
        android:text="立即登录"
        android:textSize="28px"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_marginTop="18px"
        android:layout_width="680px"
        android:layout_height="70px"
        android:layout_gravity="center"
        android:background="@drawable/register_button"
        android:text="新人注册"
        android:textSize="28px"
        android:textColor="#000000"/>

    <RelativeLayout
        android:layout_marginTop="70px"
        android:layout_width="680px"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="244px"
            android:layout_height="1px"
            android:background="#e5e5e5"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="244px"
            android:layout_height="1px"
            android:background="#e5e5e5"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_disanfang"
            android:layout_centerInParent="true"
            android:text="第三方登录"
            android:textSize="20px"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/login_qq"
            android:layout_marginLeft="234px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_qq"
                android:background="@drawable/qq"
                android:layout_width="86px"
                android:layout_height="86px"/>
            <TextView
                android:layout_below="@id/img_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:layout_marginTop="18px"
                android:text="QQ登录"
                android:layout_centerHorizontal="true"
                android:textColor="#666666"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/login_weixin"
            android:layout_marginRight="234px"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_weixin"
                android:background="@drawable/weiixn"
                android:layout_width="86px"
                android:layout_height="86px"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/img_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:layout_marginTop="18px"
                android:text="微信登录"
                android:textColor="#666666"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>