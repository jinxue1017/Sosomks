<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/top_include"
        layout="@layout/top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></include>

    <RelativeLayout
        android:layout_marginTop="80px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/flag_tv1"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92px"/>

        <TextView
            android:id="@+id/flag_tv2"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="184px"/>

        <ImageView
            android:id="@+id/img_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12px"
            android:layout_alignLeft="@id/flag_tv1"
            android:layout_alignBottom="@id/flag_tv1"
            android:background="@drawable/phone"/>

        <EditText
            android:background="@null"
            android:id="@+id/input_phone"
            android:layout_toRightOf="@id/img_phonenumber"
            android:paddingLeft="18px"
            android:layout_alignBottom="@id/flag_tv1"
            android:textSize="24px"
            android:inputType="number"
            android:lines="1"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:hint="请输入您的手机号"/>

        <ImageView
            android:id="@+id/img_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12px"
            android:layout_alignLeft="@id/flag_tv2"
            android:layout_alignBottom="@id/flag_tv2"
            android:background="@drawable/yanzhengma"/>

        <EditText
            android:background="@null"
            android:id="@+id/input_yanzhengma"
            android:layout_toRightOf="@id/img_password"
            android:paddingLeft="18px"
            android:layout_alignBottom="@id/flag_tv2"
            android:textSize="24px"
            android:inputType="number"
            android:lines="1"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:hint="请输入验证码"/>

        <Button
            android:id="@+id/btn_getinfo"
            android:layout_width="138px"
            android:layout_height="40px"
            android:text="获取验证码"
            android:textColor="#e93a38"
            android:background="@drawable/red_button"
            android:textSize="20px"
            android:layout_alignBottom="@id/flag_tv1"
            android:layout_marginBottom="10px"
            android:layout_alignEnd="@id/flag_tv1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/flag_tv3"
            android:layout_width="680px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92px"
            android:background="#a0a0a0" />

        <TextView
            android:id="@+id/flag_tv4"
            android:layout_width="680px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="184px"
            android:background="#a0a0a0" />

        <ImageView
            android:id="@+id/img_phonenumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12px"
            android:layout_alignBottom="@id/flag_tv3"
            android:layout_alignLeft="@id/flag_tv3"
            android:background="@drawable/password" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_alignBottom="@id/flag_tv3"
            android:layout_toRightOf="@id/img_phonenumber3"
            android:background="@null"
            android:inputType="textPassword"
            android:lines="1"
            android:hint="请设置您的密码"
            android:paddingLeft="18px"
            android:textColor="#cccccc"
            android:textSize="24px" />

        <ImageView
            android:id="@+id/img_password4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12px"
            android:layout_alignBottom="@id/flag_tv4"
            android:layout_alignLeft="@id/flag_tv4"
            android:background="@drawable/password" />

        <EditText
            android:id="@+id/input_password2"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_alignBottom="@id/flag_tv4"
            android:layout_toRightOf="@id/img_password4"
            android:background="@null"
            android:hint="请确认您的密码"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="18px"
            android:textColor="#cccccc"
            android:textSize="24px" />

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="680px"
        android:layout_height="70px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70px"
        android:background="@drawable/login_button"
        android:text="立即注册"
        android:textColor="#ffffff"
        android:textSize="28px" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_xieyi"
            android:layout_marginLeft="20px"
            android:checked="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_xieyi"
            android:textSize="24px"
            android:textColor="#cccccc"
            android:text="同意用户协议"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14px"
            android:layout_toRightOf="@id/cb_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_marginTop="200px"
        android:layout_width="680px"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="244px"
            android:layout_height="1px"
            android:background="#e5e5e5"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="244px"
            android:layout_height="1px"
            android:background="#e5e5e5"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_disanfang"
            android:layout_centerInParent="true"
            android:text="第三方登录"
            android:textSize="20px"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/login_qq"
            android:layout_marginLeft="234px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_qq"
                android:background="@drawable/qq"
                android:layout_width="86px"
                android:layout_height="86px"/>
            <TextView
                android:layout_below="@id/img_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:layout_marginTop="18px"
                android:text="QQ登录"
                android:layout_centerHorizontal="true"
                android:textColor="#666666"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/login_weixin"
            android:layout_marginRight="234px"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_weixin"
                android:background="@drawable/wexin"
                android:layout_width="86px"
                android:layout_height="86px"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/img_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:layout_marginTop="18px"
                android:text="微信登录"
                android:textColor="#666666"/>
        </RelativeLayout>
    </RelativeLayout>
    
</LinearLayout>