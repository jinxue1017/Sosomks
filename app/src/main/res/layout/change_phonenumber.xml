<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/top_include"
        layout="@layout/top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_phone_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#2a2a2a"
            android:text="当前手机号:"
            android:layout_marginTop="66px"
            android:layout_marginLeft="20px"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66px"
            android:textSize="28px"
            android:textColor="#2a2a2a"
            android:text="15210816481"
            android:layout_marginLeft="20px"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:textColor="#2a2a2a"
        android:layout_marginLeft="20px"
        android:layout_marginTop="28px"
        android:text="更换手机后，下次登录可使用新手机号登录"/>


    <RelativeLayout
        android:layout_marginTop="12px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px">

        <TextView
            android:id="@+id/flag_tv1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92px"/>

        <TextView
            android:id="@+id/flag_tv2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="184px"/>

        <TextView
            android:id="@+id/img_phonenumber"
            android:layout_alignLeft="@id/flag_tv1"
            android:layout_alignBottom="@id/flag_tv1"
            android:layout_width="wrap_content"
            android:layout_height="43px"
            android:textSize="28px"
            android:textColor="#2a2a2a"
            android:text="新手机号:"
            />

        <EditText
            android:background="@null"
            android:id="@+id/input_phone"
            android:layout_toRightOf="@id/img_phonenumber"
            android:paddingLeft="10px"
            android:layout_alignBottom="@id/flag_tv1"
            android:textSize="24px"
            android:inputType="number"
            android:lines="1"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px"/>

        <TextView
            android:id="@+id/img_password"
            android:layout_width="wrap_content"
            android:layout_height="43px"
            android:textSize="28px"
            android:textColor="#2a2a2a"
            android:text="验证码:"
            android:layout_alignLeft="@id/flag_tv2"
            android:layout_alignBottom="@id/flag_tv2"
            />

        <EditText
            android:background="@null"
            android:id="@+id/input_password"
            android:layout_toRightOf="@id/img_password"
            android:paddingLeft="10px"
            android:layout_alignBottom="@id/flag_tv2"
            android:textSize="24px"
            android:inputType="number"
            android:lines="1"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px"
            />

        <Button
            android:id="@+id/img_show"
            android:layout_width="138px"
            android:layout_height="40px"
            android:text="获取验证码"
            android:textColor="#e93a38"
            android:background="@drawable/red_button"
            android:textSize="20px"
            android:layout_marginRight="20px"
            android:layout_alignBottom="@id/flag_tv1"
            android:layout_marginBottom="10px"
            android:layout_alignEnd="@id/flag_tv1"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn"
        android:layout_marginTop="142px"
        android:layout_width="680px"
        android:layout_height="70px"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        android:textSize="28px"
        android:textColor="#ffffff"
        android:background="@drawable/login_button"/>

</LinearLayout>