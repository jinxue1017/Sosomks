<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:orientation="vertical">
    <com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="80px"
    android:layout_height="wrap_content"
    >
        <ImageView
        android:id="@+id/search_success_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_gravity="center"
        android:src="@drawable/back"
        />
        <EditText
        android:layout_width="560px"
        android:layout_height="56px"
        android:layout_marginLeft="36px"
        android:textColor="#666666"
        android:textSize="22px"
        android:paddingLeft="14px"
        android:hint="@string/detail_topbar"
        android:background="@drawable/merchant_search_successbc"
        />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="12px"
    android:layout_marginTop="20px"
    android:background="#f7f7f7"
    />
    <com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="194px"
    android:layout_marginTop="50px"
    >
        <ImageView
            android:id="@+id/search_success_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shangjiaicon"
        android:layout_marginLeft="30px"
        />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/success_merchant"
        android:textColor="#2a2a2a"
        android:textSize="26px"
        android:layout_marginLeft="22px"
        android:layout_toRightOf="@+id/search_success_icon"
        android:layout_marginTop="36px"
        />
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/righe"
        android:layout_marginRight="20px"
        android:layout_marginTop="45px"
        android:layout_alignParentRight="true"
        />
    </com.zhy.autolayout.AutoRelativeLayout>
    <android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ></android.support.v7.widget.RecyclerView>
</com.zhy.autolayout.AutoLinearLayout>
