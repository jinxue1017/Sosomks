<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allorder_relayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ssmk.module.shoppingcar.order.AllOrderActivity">

    <include
        android:id="@+id/top_include"
        layout="@layout/top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/allorder_tab"
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="146px"
        app:tabTextAppearance="@style/TextAppearance.Design.Tab.Custom"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/allorder_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="218px">
    </android.support.v4.view.ViewPager>
</RelativeLayout>