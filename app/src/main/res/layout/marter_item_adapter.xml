<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/mermat_rayout"
        android:layout_width="220px"
        android:layout_height="220px"
        android:alpha="0.7"
        android:layout_marginLeft="10px"
        >
    <ImageView

       android:id="@+id/marter_item_iv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:src="@drawable/baicaowei"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        />
    </RelativeLayout>
        <LinearLayout
            android:background="#000000"
            android:layout_width="186px"
            android:layout_height="50px"
            android:layout_marginLeft="26px"

            android:alpha="0.8"
            android:layout_marginTop="169px"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/shopp_name_pinyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BAICAOWEI"
                android:textColor="#fff"
                android:textSize="16px"
                android:layout_gravity="center"
                android:layout_marginTop="6px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopp_name"
                android:text="百草味"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="16px"
                />
        </LinearLayout>
    <TextView
        android:id="@+id/mermat_henxian"
        android:layout_width="220px"
        android:layout_height="10px"
        android:layout_marginLeft="10px"
        android:layout_below="@id/mermat_rayout"
        />
    <RelativeLayout
        android:id="@+id/mermat_juli"
        android:layout_width="220px"
        android:layout_height="wrap_content"
        android:layout_below="@id/mermat_rayout"
        android:layout_marginLeft="10px"
        >
        <TextView
            android:id="@+id/mermat_km1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:textSize="20px"
            android:textColor="#2a2a2a"
            android:layout_marginLeft="42px"
            android:text="1.2km  |"
            />
        <TextView
            android:id="@+id/mermat_km2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:textSize="20px"
            android:textColor="#e93a38"
             android:text="  30min"
            android:layout_toRightOf="@id/mermat_km1"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="22px"
            android:layout_below="@id/mermat_km2"
            android:layout_marginLeft="10px"
            >
        </View>
    </RelativeLayout>

</RelativeLayout>
