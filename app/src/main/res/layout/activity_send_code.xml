<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/top_include"
        layout="@layout/top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></include>

    <RelativeLayout
        android:layout_marginTop="80px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/flag_tv1"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92px"/>

        <TextView
            android:id="@+id/flag_tv2"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="184px"/>

        <ImageView
            android:id="@+id/img_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12px"
            android:layout_alignLeft="@id/flag_tv1"
            android:layout_alignBottom="@id/flag_tv1"
            android:background="@drawable/phone"/>

        <EditText
            android:background="@null"
            android:id="@+id/input_phone"
            android:layout_toRightOf="@id/img_phonenumber"
            android:paddingLeft="18px"
            android:layout_alignBottom="@id/flag_tv1"
            android:textSize="24px"
            android:inputType="number"
            android:lines="1"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:hint="请输入您的手机号"/>

        <ImageView
            android:id="@+id/img_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12px"
            android:layout_alignLeft="@id/flag_tv2"
            android:layout_alignBottom="@id/flag_tv2"
            android:background="@drawable/yanzhengma"/>

        <EditText
            android:background="@null"
            android:id="@+id/input_yanzhengma"
            android:layout_toRightOf="@id/img_password"
            android:paddingLeft="18px"
            android:layout_alignBottom="@id/flag_tv2"
            android:textSize="24px"
            android:inputType="number"
            android:lines="1"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:hint="请输入验证码"/>

        <Button
            android:id="@+id/btn_getcode"
            android:layout_width="138px"
            android:layout_height="40px"
            android:text="获取验证码"
            android:textColor="#e93a38"
            android:background="@drawable/red_button"
            android:textSize="20px"
            android:layout_alignBottom="@id/flag_tv1"
            android:layout_marginBottom="10px"
            android:layout_alignEnd="@id/flag_tv1"/>
    </RelativeLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="680px"
        android:layout_height="70px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70px"
        android:background="@drawable/login_button"
        android:text="@string/next_step"
        android:textColor="#ffffff"
        android:textSize="28px" />

</LinearLayout>
