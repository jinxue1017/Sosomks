<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="680px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:background="@drawable/dibu"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orderdetails_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:text="订单号：1314"
            android:textColor="#2a2a2a"
            android:textSize="20px"
            />

        <TextView
            android:id="@+id/orderdetails_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="16px"
            android:text="创建时间：2017年7月7日"
            android:textColor="#2a2a2a"
            android:textSize="20px"
            />

        <TextView
            android:id="@+id/orderdetails_order_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="16px"
            android:text="需付款￥222"
            android:textColor="#2a2a2a"
            android:textSize="20px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            android:layout_marginBottom="16px"
            android:text="剩余30分钟自动关闭"
            android:textColor="#bb0c0c"
            android:textSize="24px"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/orderdetails_weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/llayout"
        android:layout_alignRight="@+id/llayout"
        android:background="@drawable/weixin"
        android:layout_marginBottom="20px"
        android:layout_marginRight="20px"
        android:visibility="gone"
        />
</RelativeLayout>